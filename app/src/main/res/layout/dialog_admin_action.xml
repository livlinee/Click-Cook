<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="24dp"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView android:text="Tindakan Laporan" android:textSize="20sp" android:textStyle="bold"
        android:layout_marginBottom="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btn_hapus_konten" android:text="Hapus Konten &amp; Selesaikan"
        android:backgroundTint="#D32F2F" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btn_tolak_laporan" android:text="Tolak Laporan (Abaikan)"
        android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btn_cancel" android:text="Batal"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>