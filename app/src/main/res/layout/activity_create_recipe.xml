<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background">

    <View
        android:id="@+id/headerView"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_header_gradient"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvHeaderTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="40dp"
        android:text="Membuat Resep"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headerView">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="120dp">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutUploadPhoto"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="@drawable/bg_dashed_border"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/icCamera"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/ic_camera_alt"
                    app:layout_constraintBottom_toTopOf="@+id/tvUploadHint"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/tvUploadHint"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tambah Foto Makanan"
                    android:textColor="@color/primary_orange"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/icCamera" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/labelTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Judul Resep"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/layoutUploadPhoto" />

            <EditText
                android:id="@+id/etTitle"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/bg_input_field"
                android:hint="Contoh: Soto Banjar Asli"
                android:paddingHorizontal="16dp"
                android:textColor="@color/black_text"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@+id/labelTitle" />

            <LinearLayout
                android:id="@+id/rowSpinners"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:baselineAligned="false"
                app:layout_constraintTop_toBottomOf="@+id/etTitle">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginEnd="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kategori"
                        android:textStyle="bold"
                        android:textColor="@color/black_text"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>
                    <Spinner
                        android:id="@+id/spCategory"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_spinner_outline"
                        android:paddingStart="4dp"
                        android:paddingEnd="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Waktu"
                        android:textStyle="bold"
                        android:textColor="@color/black_text"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>
                    <Spinner
                        android:id="@+id/spTime"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_spinner_outline"
                        android:paddingStart="4dp"
                        android:paddingEnd="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="4dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Kesulitan"
                        android:textStyle="bold"
                        android:textColor="@color/black_text"
                        android:textSize="12sp"
                        android:layout_marginBottom="4dp"/>
                    <Spinner
                        android:id="@+id/spDifficulty"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="@drawable/bg_spinner_outline"
                        android:paddingStart="4dp"
                        android:paddingEnd="20dp"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/labelIngredients"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Bahan-Bahan"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/rowSpinners" />

            <LinearLayout
                android:id="@+id/layoutIngredientsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/labelIngredients">

                <EditText
                    android:id="@+id/etIngredient"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Nama Bahan"
                    android:paddingHorizontal="16dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp" />

            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddIngredient"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="+ Tambah Bahan"
                android:textColor="@color/primary_orange"
                android:textSize="12sp"
                app:backgroundTint="@null"
                app:strokeColor="@color/primary_orange"
                app:strokeWidth="1dp"
                android:background="@drawable/bg_button_outline"
                app:layout_constraintTop_toBottomOf="@+id/layoutIngredientsContainer" />

            <TextView
                android:id="@+id/labelSteps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Cara Masak"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnAddIngredient" />

            <LinearLayout
                android:id="@+id/layoutStepsContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/labelSteps">

                <EditText
                    android:id="@+id/etStep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="3"
                    android:gravity="top|start"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/bg_input_field"
                    android:hint="Cara Masak"
                    android:padding="12dp"
                    android:textColor="@color/black_text"
                    android:textSize="14sp"/>
            </LinearLayout>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAddStep"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="+ Tambah Langkah"
                android:textColor="@color/primary_orange"
                android:textSize="12sp"
                app:backgroundTint="@null"
                android:background="@drawable/bg_button_outline"
                app:layout_constraintTop_toBottomOf="@+id/layoutStepsContainer" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnAddStep">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnDraft"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:text="Simpan Draf"
                    android:textAllCaps="false"
                    android:textColor="@color/black_text"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_button_outline" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnPublish"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:text="Terbitkan"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    app:backgroundTint="@null"
                    android:background="@drawable/bg_button_gradient" />
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomNavContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>