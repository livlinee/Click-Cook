<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background">

    <LinearLayout
        android:id="@+id/layoutProfileHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="24dp"
        android:paddingTop="56dp"
        android:paddingBottom="24dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgProfile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_person_placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Pengguna"
                android:textColor="@color/black_text"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bio pengguna"
                android:textColor="@color/gray_text"
                android:textSize="14sp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/btnSettings"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:padding="4dp"
            android:src="@drawable/ic_settings"
            app:tint="@color/black_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:paddingTop="12dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@+id/layoutProfileHeader">

        <LinearLayout
            android:id="@+id/tabPublished"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvPublished"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Diterbitkan"
                android:textColor="@color/primary_orange"
                android:textSize="16sp"
                android:textStyle="bold" />

            <View
                android:id="@+id/indicatorPublished"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/primary_orange" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tabDraft"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvDraft"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Draf"
                android:textColor="@color/gray_text"
                android:textSize="16sp" />

            <View
                android:id="@+id/indicatorDraft"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/gray_stroke" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEmptyPublished"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/layoutTabs">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Belum ada\nResep diterbitkan"
            android:textColor="@color/black_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Bagikan resep andalan Anda dan tunjukkan keahlian memasak Anda kepada komunitas"
            android:textColor="@color/gray_text"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutEmptyDraft"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="40dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnCreateRecipeBottom"
        app:layout_constraintTop_toBottomOf="@+id/layoutTabs">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Belum Ada\nResep di Draf"
            android:textColor="@color/black_text"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Anda belum memulai atau menyimpan draf resep baru. Klik tombol (+) untuk memulai!"
            android:textColor="@color/gray_text"
            android:textSize="14sp" />
    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPublishedGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        android:paddingHorizontal="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnCreateRecipeBottom"
        app:layout_constraintTop_toBottomOf="@+id/layoutTabs"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_profile_recipe" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvDraftGrid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingTop="16dp"
        android:paddingBottom="24dp"
        android:paddingHorizontal="16dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnCreateRecipeBottom"
        app:layout_constraintTop_toBottomOf="@+id/layoutTabs"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
        app:spanCount="2"
        tools:listitem="@layout/item_profile_recipe" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCreateRecipeBottom"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginHorizontal="24dp"
        android:layout_marginBottom="24dp"
        android:text="Buat Resep Baru Sekarang"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        android:background="@drawable/bg_button_gradient"
        app:cornerRadius="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>