<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="24dp" android:gravity="center"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView android:text="Bagaimana resep ini?" android:textSize="20sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <RatingBar android:id="@+id/rating_bar_input" android:numStars="5" android:stepSize="1"
        android:layout_marginTop="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content"/>

    <EditText android:id="@+id/et_review_comment" android:hint="Tulis pendapatmu..."
        android:layout_marginTop="24dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>

    <Button android:id="@+id/btn_submit_review" android:text="Kirim Ulasan"
        android:layout_marginTop="24dp" android:layout_width="match_parent" android:layout_height="wrap_content"/>
</LinearLayout>