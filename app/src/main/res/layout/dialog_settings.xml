<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="16dp"
    app:cardBackgroundColor="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="24dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pusat Kontrol Akun"
                android:textColor="@color/black_text"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/dividerTitle"
                android:layout_width="match_parent"
                android:layout_height="1dp"  android:layout_marginTop="16dp"
                android:background="@color/gray_stroke"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgProfilePhoto"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="24dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_placeholder"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.MaterialComponents.SmallComponent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dividerTitle" />

            <ImageView
                android:id="@+id/btnChangePhoto"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:background="@drawable/bg_circle_white"
                android:elevation="2dp"
                android:padding="4dp"
                android:src="@drawable/ic_camera_alt"
                app:tint="@color/primary_orange"
                app:layout_constraintBottom_toBottomOf="@+id/imgProfilePhoto"
                app:layout_constraintEnd_toEndOf="@+id/imgProfilePhoto"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/imgProfilePhoto"
                app:layout_constraintTop_toTopOf="@+id/imgProfilePhoto"
                app:layout_constraintVertical_bias="1.0" />

            <TextView
                android:id="@+id/labelName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Nama Lengkap"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imgProfilePhoto" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ilName"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/gray_stroke"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/labelName">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lila Vimala"
                    android:inputType="textPersonName"
                    android:textColor="@color/black_text" />
            </com.google.android.material.textfield.TextInputLayout>

            <TextView
                android:id="@+id/labelBio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Bio"
                android:textColor="@color/black_text"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ilName" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ilBio"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/gray_stroke"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/labelBio">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etBio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Masakan untuk keluarga"
                    android:minLines="2"
                    android:gravity="top|start"
                    android:textColor="@color/black_text" />
            </com.google.android.material.textfield.TextInputLayout>

            <View
                android:id="@+id/dividerPass"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="24dp"
                android:background="@color/gray_stroke"
                app:layout_constraintTop_toBottomOf="@+id/ilBio" />

            <TextView
                android:id="@+id/labelOldPass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Ubah Password"
                android:textColor="@color/black_text"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dividerPass" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ilOldPass"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/gray_stroke"
                app:endIconMode="password_toggle"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/labelOldPass">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etOldPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password Lama"
                    android:inputType="textPassword"
                    android:textColor="@color/black_text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/ilNewPass"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:boxBackgroundColor="@color/white"
                app:boxCornerRadiusBottomEnd="12dp"
                app:boxCornerRadiusBottomStart="12dp"
                app:boxCornerRadiusTopEnd="12dp"
                app:boxCornerRadiusTopStart="12dp"
                app:boxStrokeColor="@color/gray_stroke"
                app:endIconMode="password_toggle"
                app:hintEnabled="false"
                app:layout_constraintTop_toBottomOf="@+id/ilOldPass">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNewPass"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Password Baru"
                    android:inputType="textPassword"
                    android:textColor="@color/black_text" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSavePassword"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:text="Simpan"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="12sp"
                android:paddingHorizontal="16dp"
                app:backgroundTint="@color/green_success"
                app:cornerRadius="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/ilNewPass" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnLogout"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginTop="32dp"
                android:text="Keluar"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="@null"
                android:background="@drawable/bg_button_gradient"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_exit_to_app"
                app:iconTint="@color/white"
                app:iconGravity="textStart"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnSavePassword" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>
</com.google.android.material.card.MaterialCardView>