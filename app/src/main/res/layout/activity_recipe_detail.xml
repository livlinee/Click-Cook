<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cream_background"
    tools:context=".RecipeDetailActivity">

    <androidx.core.widget.NestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/footer_layout">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/recipe_image"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/logo"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Gambar Resep" />

            <ImageButton
                android:id="@+id/btn_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_circle_white"
                android:src="@drawable/ic_arrow_back"
                android:padding="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Tombol Kembali"
                app:tint="@color/black_text" />

            <ImageButton
                android:id="@+id/btn_warning_header"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_circle_white"
                android:src="@drawable/ic_warning_outline_circle"
                android:padding="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:contentDescription="Tombol Peringatan"
                app:tint="@color/red_error" />

            <ImageButton
                android:id="@+id/btn_favorite_inline"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_marginEnd="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Tombol Favorit Resep"
                android:padding="6dp"
                android:src="@drawable/ic_nav_favorite"
                app:tint="@color/red_error"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@id/recipe_title"
                app:layout_constraintBottom_toBottomOf="@id/recipe_title" />


            <TextView
                android:id="@+id/recipe_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="8dp"
                android:text="Coconut Curry Red Lentil Dahl with Tomatoes, Cilantro &amp; Rice."
                android:textSize="22sp"
                android:textStyle="bold"
                android:textColor="@color/black_text"
                app:layout_constraintEnd_toStartOf="@+id/btn_favorite_inline"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recipe_image" />


            <TextView
                android:id="@+id/recipe_duration"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                android:text="35 menit â€¢ Mudah"
                android:textSize="14sp"
                android:textColor="@color/gray_text"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/recipe_title" />

            <LinearLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:orientation="horizontal"
                android:weightSum="3"
                app:layout_constraintTop_toBottomOf="@id/recipe_duration">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_bahan"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Bahan"
                    android:textColor="@color/black_text"
                    android:background="@drawable/selector_tab_state"
                    android:stateListAnimator="@null"
                    android:state_selected="true"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp"
                    android:textAllCaps="false"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cara_masak"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Cara Masak"
                    android:textColor="@color/black_text"
                    android:background="@drawable/selector_tab_state"
                    android:stateListAnimator="@null"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp"
                    android:textAllCaps="false"
                    android:layout_marginEnd="8dp"/>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_lihat_ulasan"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Lihat Ulasan"
                    android:textColor="@color/black_text"
                    android:background="@drawable/selector_tab_state"
                    android:stateListAnimator="@null"
                    app:backgroundTint="@null"
                    app:cornerRadius="12dp"
                    android:textAllCaps="false"
                    android:layout_marginEnd="8dp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tvIngredientsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Daftar Bahan"
                android:textColor="@color/black_text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tab_layout"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvIngredients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:layout_marginBottom="24dp"
                android:layout_marginHorizontal="24dp"
                android:background="@drawable/bg_ingredients_box"
                android:padding="16dp"
                app:layout_constraintTop_toBottomOf="@+id/tvIngredientsHeader"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_ingredient_list"/>
            <TextView
                android:id="@+id/tvStepsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cara Memasak"
                android:textColor="@color/black_text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/rvIngredients"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvSteps"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="24dp"
                android:visibility="gone"
                android:layout_marginBottom="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvStepsHeader"
                app:layout_constraintBottom_toTopOf="@+id/tvReviewsHeader"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_step_card"/>


            <TextView
                android:id="@+id/tvReviewsHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ringkasan Rating"
                android:textColor="@color/black_text"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="8dp"
                android:layout_marginStart="16dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/rvSteps"
                app:layout_constraintStart_toStartOf="parent"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                android:paddingHorizontal="24dp"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@+id/tvReviewsHeader"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                tools:listitem="@layout/item_review_comment"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:background="@color/white"
        android:elevation="8dp"
        android:gravity="center_vertical"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Suka resep ini?"
                android:textSize="14sp"
                android:textColor="@color/black_text" />

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:numStars="5"
                android:stepSize="1"
                android:progressTint="@color/secondary_gold"
                android:secondaryProgressTint="@color/gray_stroke" />
        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_tulis_ulasan"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:text="Tulis Ulasan"
            android:textColor="@color/white"
            android:background="@drawable/bg_button_gradient"
            app:backgroundTint="@null"
            app:cornerRadius="12dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:textAllCaps="false" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>