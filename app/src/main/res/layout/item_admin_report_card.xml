<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="@color/gray_stroke"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/iconWarning"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_warning"
            app:tint="@color/red_error"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <LinearLayout
            android:id="@+id/layoutDetails"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/iconWarning"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tvViolationType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Pelanggaran: Spam / Iklan."
                android:textColor="@color/black_text"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Jenis Pelanggaran: Spam / Iklan."/>

            <TextView
                android:id="@+id/tvUsers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Pelapor: @rinamariani@gmail.com"
                android:textColor="@color/black_text"
                android:textSize="12sp"
                tools:text="Pelapor: @rinamariani@gmail.com"/>

            <TextView
                android:id="@+id/tvReportedUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terlapor: @budisantoso@gmail.com"
                android:textColor="@color/black_text"
                android:textSize="12sp"
                tools:text="Terlapor: @budisantoso@gmail.com"/>

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="2 Jam Lalu"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                tools:text="2 Jam Lalu"/>
        </LinearLayout>

        <TextView
            android:id="@+id/tvStatusTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:paddingHorizontal="10dp"
            android:paddingVertical="4dp"
            android:text="Selesai (Konten dihapus)"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:textStyle="bold"
            android:background="@drawable/bg_status_green"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/layoutDetails"
            tools:visibility="visible"
            tools:background="@drawable/bg_status_green" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>